@model IEnumerable<OpenCMS.EntityModels.FetchPageById_Result>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Details</h2>

<div>
    <h4>FetchPageById_Result</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Page Slug")
            </th>
            <th>
                @Html.DisplayName("Page Title")
            </th>
            <th>
                @Html.DisplayName("Page Keyword")
            </th>
            <th>
                @Html.DisplayName("Page Description")
            </th>
            <th>
                @Html.DisplayName("Page Content")
            </th>
            <th>
                @Html.DisplayName("IsActive")
            </th>
            <th>
                @Html.DisplayName("IsDelete")
            </th>
            <th>
                @Html.DisplayName("Create_On")
            </th>
            <th>
                @Html.DisplayName("Modify_On")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PKeyword)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDelete)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Create_On)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modify_On)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPage", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
        }

    </table>
</div>
<p>
</p>
