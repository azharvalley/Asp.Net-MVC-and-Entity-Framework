@model IEnumerable<OpenCMS.EntityModels.CMSPage>

@{
    ViewBag.Title = "AllCMSPages";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="single-module-block-full">
        <div class="db-head-block">
            <div class="row align-items-center">
                <div class="col-sm-8">
                    <h2 class="main-head">List of Page</h2>
                </div>
                <div class="col-sm-4">
                    <div class="db-head-block-btn">
                        @Html.ActionLink("Create New", "AddUpdatePage", null, new { @class = "btn-main d-block" })
                    </div>
                </div>
            </div>
        </div>
    </div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Page Slug")
        </th>
        <th>
            @Html.DisplayName("Page Title")
        </th>
        <th>
            @Html.DisplayName("Page Keyword")
        </th>
        <th>
            @Html.DisplayName("Page Description")
        </th>
        <th>
            @Html.DisplayName("Page Content")
        </th>
        <th>
            @Html.DisplayName("IsActive")
        </th>
        <th>
            @Html.DisplayName("IsDelete")
        </th>
        <th>
            @Html.DisplayName("Create_On")
        </th>
        <th>
            @Html.DisplayName("Modify_On")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PKeyword)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDelete)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Create_On)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modify_On)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
