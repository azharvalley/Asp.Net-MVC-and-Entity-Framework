@model IEnumerable<OpenCMS.EntityModels.FetchPageById_Result>

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="single-module-block-full">
    <div class="db-head-block">
        <div class="row align-items-center">
            <div class="col-sm-8">
                <h2 class="main-head">Delete</h2>
            </div>
            <div class="col-sm-4">
                <div class="db-head-block-btn">
                    @Html.ActionLink("Back to List", "AllCMSPages", "Admin", null, new { @class = "btn-main" })
                </div>
            </div>
        </div>
    </div>
</div>

<h3>Are you sure you want to delete this?</h3>
<div class="db-worklog-filter db-task-box">
    <h4>Details</h4>
    <hr />
    <dl class="dl-horizontal">
        @foreach (var item in Model)
        {
            <dt>
                @Html.DisplayName("Page Slug")
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.Slug)
            </dd>

            <dt>
                @Html.DisplayName("Page Title")
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.PTitle)
            </dd>

            <dt>
                @Html.DisplayName("Page Keyword")
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.PKeyword)
            </dd>

            <dt>
                @Html.DisplayName("Page Description")
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.PDescription)
            </dd>

            <dt>
                @Html.DisplayName("Page Content")
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.PageContent)
            </dd>

            <dt>
                @Html.DisplayName("IsActive")
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.IsActive)
            </dd>

            <dt>
                @Html.DisplayName("IsDelete")
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.IsDelete)
            </dd>

            <dt>
                @Html.DisplayName("Create_On")
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.Create_On)
            </dd>

            <dt>
                @Html.DisplayName("Modify_On")
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.Modify_On)
            </dd>
        }
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn-main" />
        </div>
    }
</div>
